<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/iconImage"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_platform"
                android:contentDescription="Icono del dispositivo"
                android:layout_marginEnd="16dp"
                android:scaleType="fitCenter" />
            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del dispositivo"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvModelotext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Modelo: "
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvModelo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Modelotext:"
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvUbicaciontext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Ubicacion: "
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvUbicacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Ubicaciontext:"
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvFabricantetext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Fabricante: "
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvFabricante"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Fabricantetext:"
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/divider3"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:outlineAmbientShadowColor="@color/black"
                android:outlineSpotShadowColor="@color/black"
                android:background="?android:attr/listDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvIptext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IP: "
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp" />
                    <TextView
                        android:id="@+id/tvIp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IPtext:"
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvPuertoSwitchtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Puerto: "
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp" />
                    <TextView
                        android:id="@+id/tvPuertoSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PuertoSwitchtext:"
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvSwitchtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Switch: "
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp" />
                    <TextView
                        android:id="@+id/tvSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Switchtext:"
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_circle_lightgray"
                android:src="@drawable/ic_edit_button"
                android:contentDescription="Editar"
                android:padding="8dp" />

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/btn_circle_lightgray"
                android:src="@drawable/ic_delete_button"
                android:contentDescription="Eliminar"
                android:padding="8dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>